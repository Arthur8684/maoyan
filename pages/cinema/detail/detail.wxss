/* pages/cinema/detail/detail.wxss */
.cinema{
    font-size: 12px;
    background: white;
}
.top{
    padding: 10px 0 0 10px;
    display: inline-block;
}
.top .nm{
    font-size: 16px;
}
.top .addr{
    color: #999;
}
.map{
    float: right;
    padding: 10px 20px 0 16px;
}
.map image{
    width: 30px;
    height: 40px;
}
.bg{
    height: 160px;
    margin-top: 10px;
}
.list{
    width:100%;
    height: 160px;
    opacity: 0.2;
    position: absolute;
    background-size:400%;
    background-repeat:no-repeat;
}
.img{
    position: relative;
    width: 9999px;
    overflow: hidden;
    margin-left:60px;
    top: 10px;
}
.img image{
    width: 80px;
    display: inline-block;
    margin-right: 10px;
    height: 140px;
}
.title{
    text-align: center;
    font-size: 12px;
    color: #999;
    padding:10px 0; 
    border-bottom: 1px solid #e6e6e6; 
}
.title .nm{
    font-size: 16px;
    color: black;
}
.title .sc{
    color: orange;
    font-size: 14px;
}
.title .title-detail{
    letter-spacing: 2px;
}
.dateshow{
    font-size:14px;
}
.dateshow .time{
    color: #999;
    border-bottom: 1px solid #e6e6e6;
}
.dateshow .time .date{
    height: 50px;
    line-height: 50px;
    display: inline-block;
    padding: 0 20px 0 10px;
}
.dateshow .tm-list{
    font-size: 12px;
    color: #999;
    border-bottom: 1px solid #e6e6e6;
    padding: 8px 10px;
}
.dateshow .tm-list .sp{
    display: inline-block;
}
.black{
    color: black;
}
.dateshow .tm-list .tm{
    font-size: 16px;
}
.dateshow .tm-list .lang{
    margin-left: 50px;
}
.dateshow .tm-list .ticket{
    float: right;
    margin-top: 10px;
}